global !p
from complete import *
endglobal

snippet "\bg(e(t(o(p(t)?)?)?)?)?\." "Methods of getopt." r
getopt.$1`!p snip.rv = complete(t[1], ["getopt", "gnu_getopt"])`
endsnippet

snippet "\bgetopt.getopt\*?" "getopt.getopt" r
getopt.getopt(${1:args}, ${2:options}${3:, ${4:long_options}})
endsnippet

snippet "\bgetopt.gnu_getopt\*?" "getopt.gnu_getopt" r
getopt.gnu_getopt(${1:args}, ${2:options}${3:, ${4:long_options}})
endsnippet

