	${1::}
fi
endsnippet

priority 1
snippet "elif" "elif .. (elif)" r
elif ${1:[[ ${2:condition} ]]}; then
	${3::}
endsnippet

priority 1
snippet "f(o(r)?)? ?\(\(" "for (()) ... done" r
for (( i = 0; i < ${1:10}; i++ )); do
	${2::}
done
endsnippet

priority 1
snippet "f(o(r)?)? ?in" "for ... in ... done (forin)" r
for ${1:i}${2/.+/ in /}${2:words}; do
	${0::}
done
endsnippet

